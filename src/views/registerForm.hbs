<div class="login-register-jumbo">
    {{>jumbo}}
</div>
{{>messages}}
<div class="form-container">
    <form action="/register" method="POST">
        <div class="new-mission-title form-item">
            <div class="form-title">
                <label for="title">
                    <h1 class="new-mission-form-title">
                        Registro
                    </h1>
                </label>
            </div>
        </div>
        <div class="form-item">
            <input type="text" name="name" id="name" placeholder="Nombre de Usuario" required="true" fill={{name}} >
        </div>
        <div class="form-item">
            <input type="email" name="email" id="email" placeholder="Email" required="true" fill={{email}} >
        </div>
        <div class="form-item">
            <input type="password" name="password" id="password" placeholder="ContraseÃ±a"  required="true" fill={{password}}>
        </div>
        <div class="form-item">
            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Repetir contraseÃ±a"  required="true" fill={{confirmPassword}}>
        </div>
        <div class="error-message">
            {{message}}
        </div>
        <div class="login-btn-container form-item">
            <button type="submit" class="custom-btn login-btn">
                <p class="btn-text">
                    Registrarte
                </p>
            </button>
        </div>
        <div class="form-item">
            <a href="/login">Ya tengo cuenta</a>
        </div>
    </form>
</div>
<script src="registerForm.js"></script>
{{>footer}}